{
  "functions": [
    {
      "source": "functions",
      "codebase": "functions",
      "ignore": [
        "venv",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ]
    }
  ],
  "emulators": {
    "functions": {
      "port": 4000
    },
    "firestore": {
      "port": 8083
    },
    "pubsub": {
      "port": 8081
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true,
    "auth": {
      "port": 9090
    },
    "database": {
      "port": 9003
    }
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
